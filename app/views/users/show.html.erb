<br>
<h1><%= best_in_place @user, :username %>'s page</h1>
<ul>
	<h3>Username:</h3>
	<h4><%= @user.username %></h4>

	<h3>User type:</h3>
	<h4><%= @user.user_type %></h4>

	<h3>Description:</h3>
	<h4><%= raw @user.description %></h4>

	<h3>Price Range:</h3>
	<h4><%= @user.price_range %></h4>

	<h3>List of Foods:</h3>
	<% @user.food.each do |item| %> 
		<h4><%= item.fname %></h4>
	<% end %>
</ul>
<% if current_user.id == @user.id %>
	<p><%= link_to 'Edit Profile', edit_user_path %></p>
<% end %>

<h2>Friends</h2>
<ul>
  <% for friendship in @user.friendships %>
    <li>
      <%=h friendship.friend.username %>
      (<%= link_to "remove", friendship, :method => :delete %>)
    </li>
  <% end %>
</ul>

<% if current_user.id == @user.id %>
	<p><%= link_to "Find Friends", users_search_path %></p>
<% end %>

<h2>Friended by Users</h2>
<ul>
  <% for user in @user.inverse_friends %>
    <li><%=h user.username %></li>
  <% end %>
</ul>
</br>
</br>
</br>
