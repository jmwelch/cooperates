      <% @ingredient = ingredient %>
      <li>ingredient name | quantity_left</li>
      <li><%= best_in_place @ingredient, :ingredient_name, :path => user_path  %>
      <%= best_in_place @inventory, :quantity_left, :path => user_path  %></li>
  <% end %>
<% end %>
</ul>

