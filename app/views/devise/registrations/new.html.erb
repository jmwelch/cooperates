<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :user_type %><br />
  <%= f.select :user_type, [['restaurant'],['supplier'],['both']] %></div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description, :rows=>'4' %></div>

  <div><%= f.label :price_range %><br />
  <%= f.text_field :price_range %></div>

  <div><%= f.submit "Sign up", :class=>'btn' %></div>
<% end %>

<%= render "devise/shared/links" %>
