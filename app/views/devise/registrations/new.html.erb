<div class="container">
  <br><br>
<h2>Sign Up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :username %>
  <%= f.text_field :username, :autofocus => true %></div>

  <div><%= f.label :email_address %>
  <%= f.email_field :email, :autofocus => true, :id=>'user_email2' %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, :id=>'user_password2' %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
  
  <div><%= f.label :user_type %>
  <%= f.select :user_type, [['restaurant'],['supplier']] %></div><br>


  <div><%= f.submit "Sign up", {:class=>'btn'} %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>