<%= form_for(@stock) do |f| %>
  <% if @stock.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stock.errors.count, "error") %> prohibited this stock from being saved:</h2>

      <ul>
      <% @stock.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Ingredient Name" %><br />
    <%= f.text_field :ingredient_name %>
  </div>
  <div class="field">
    <%= f.label "Quantity in Stock" %><br />
    <%= f.number_field :quantity %>
  </div>
	<div>
		<%= f.fields_for :ingredients do |builder| %>
			<table>
				<tr>
					<td><%= builder.label "Ingredient Used:" %></td>
					<td><%= builder.label "Quantity Used:" %></td>
				</tr>
				<tr>
					<td><%= builder.text_field :ingredient_name %></td>
					<td><%= builder.text_field :quantity_used %></td>
				</tr>
			</table>
		<% end %>
	</div>
	<div class="actions">
    <%= f.submit %>
  </div>
<% end %>
