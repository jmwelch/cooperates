<div class='container'>
<br><br><br>

<% if @user.user_type == 'restaurant' %>
	<% if @stock.empty? %>
		<p>Inventory appears to be empty!</p>
	<% else %>
		<% @stock.each do |s| %>
			<%= link_to s.ingredient_name, stock_path(s) %>
			<% if s.quantity < s.low_quantity %>
				<%= p " - This item is low on stock!" %>
				<%= link_to "Buy more?", new_transaction_path(current_user.id, :food => s.ingredient_name) %>
			<% end %><br>
		<% end %>
	<% end %>
<% else %>
	<% if @stock.empty? %>
		<p>Inventory appears to be empty!</p>
	<% else %>
		<% @stock.each do |s| %>
			<%= link_to s.ingredient_name, stock_path(s) %>
			- <%= s.quantity %>
			<% if s.quantity < 20 %>
				<%= p " - This item is low on stock!" %>
				<%= link_to "Restock?", stock_show_path(:id => current_user.id, :ingredient => s.ingredient_name), :method => 'post' %>
			<% end %><br>
		<% end %>
	<% end %>
<% end %>
<br>
<%= link_to "Add an item to your Inventory", new_stock_path %><br>
<%= link_to "Edit Inventory via CSV", stocks_csv_path %>
</div>
