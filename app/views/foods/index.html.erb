<div class="container">
<br><br><br>

<% if @food.empty? %>
	<p>No Foods found!</p>
<% else %>
	<table>
		<tr>
			<td><strong>Food</strong></td>
			<td><strong>Price</strong></td>
		</tr>
		<% @food.each do |food| %>
			<tr>
				<td><%= link_to food.name, food_path(food.id) %></td>
				<td>$<%= number_with_precision(food.price, :precision => 2) %></td>
				<td><%= link_to "Sell this Food", food_sell_path(current_user.id, :food_id => food.id), :method => 'post' %></td>
			<tr>
		<% end %><br>
	</table>
<% end %>

<% if current_user.id == params[:id].to_i %>
	<p><%= link_to "Add food?", new_food_path %></p>
<% end %>
